{
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(spec|test))\\.(js|ts|tsx)?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1"
  }
}
