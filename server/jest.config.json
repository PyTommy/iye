{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts|tsx)?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1",
    "^@tests/(.*)": "<rootDir>/tests/$1"
  }
}
