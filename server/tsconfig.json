{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"rootDirs": ["src", "tests"],
		"outDir": "dist",
		"paths": {
			"@tests/*": ["../tests/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules"]
}
